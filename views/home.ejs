                </div>
                <div class="form-group">
                    <input class='form-control' type="text" name='problem' placeholder="Problem">
                </div>
                <div class="form-group">
                    <input class='form-control' type="number" name='number' placeholder="contact number">
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block">submit</button>
                </div>
            </form>
            <hr>
            <div class="form-group">
                <a href="/" type="button" class="btn btn-primary btn-lg btn-block"> Button</a>
            </div>
        </div>
    </div>   
</div>
